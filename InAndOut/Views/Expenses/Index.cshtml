@model IEnumerable<InAndOut.Models.Expenses>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expenses" asp-action="Create" class="btn btn-primary">Create New Item</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense
                    </th>
                    <th>
                        Amount
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="35%">@item.Expense</td>
                    <td width="35%">@item.Amount</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Expenses" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                            <a asp-controller="Expenses" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created!!!</p>
    }

</div>